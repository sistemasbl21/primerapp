<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DBDADA"
    tools:context=".ActualizarEliminarActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/ida2"
        android:hint="*ID" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="48dp" app:layout_constraintTop_toTopOf="parent"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/nombrea2"
        android:hint="*NOMBRE"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/ida2" android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/disponiblea2"
        android:hint="*DISPONIBLES"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/nombrea2" android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/vendidoa2"
        android:hint="*VENDIDOS"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/disponiblea2" android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/valorua2"
        android:hint="*VALOR UNITARIO"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/vendidoa2" android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/valorta2"
        android:hint="*VALOR TOTAL"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/valorua2" android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"/>
    <Button
        android:text="buscar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bbuscar" app:layout_constraintEnd_toStartOf="@+id/bactualizar"
        android:layout_marginEnd="8dp"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
        app:layout_constraintHorizontal_bias="0.971" android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/valorta2"/>
    <Button
        android:text="actualizar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bactualizar" app:layout_constraintEnd_toStartOf="@+id/beliminar" android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/valorta2"/>
    <Button
        android:text="eliminar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/beliminar" android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/valorta2"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>

