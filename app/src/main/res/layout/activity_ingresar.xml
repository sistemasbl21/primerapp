<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IngresarActivity"
    android:background="#DBDADA">
    <EditText
        android:layout_width="220dp"
        android:layout_height="48dp"
        android:ems="10"
        android:id="@+id/idproductos"
        android:hint="*ID"
        android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent" android:inputType="number"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.497" android:layout_marginTop="32dp"/>

    <Button
        android:text="Consultar"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/bconsultarp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="32dp"
        app:layout_constraintEnd_toStartOf="@+id/bconsultarpqr"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/vendidosp"
        app:layout_constraintHorizontal_bias="0.361" />

    <Button
        android:text="Consultar Q/R"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/bconsultarpqr"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="44dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/vendidosp" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:id="@+id/nombrep"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
        android:text="NOMBRE" android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/idproductos"
        android:background="#E7E7E7" android:layout_marginEnd="32dp" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.406"/>
    <TextView
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:id="@+id/valorunitariop"
        android:text="VALOR UNITARIO"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="32dp" android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/nombrep"
        android:background="#E7E7E7" android:layout_marginEnd="32dp" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.361"/>
    <TextView
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:id="@+id/vendidop"
        android:text="DISPONIBLES"
        android:background="#E7E7E7" android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/totalp" android:layout_marginStart="32dp"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.361"/>
    <TextView
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:id="@+id/vendidosp"
        android:text="VENDIDOS"
        android:background="#E7E7E7" android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/vendidop" android:layout_marginStart="32dp"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.361"/>
    <TextView
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:id="@+id/totalp"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
        android:text="TOTAL" android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/valorunitariop"
        android:background="#E7E7E7" android:layout_marginEnd="32dp" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.361"/>

</androidx.constraintlayout.widget.ConstraintLayout>

