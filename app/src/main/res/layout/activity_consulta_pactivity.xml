<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DBDADA"
    tools:context=".ConsultaPActivity">
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/idp"
        android:hint="*ID" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="60dp" app:layout_constraintTop_toTopOf="parent"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/nombrep"
        android:hint="*NOMBRE" android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/idp"
        android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/vendidop"
        android:hint="*VENDIDOS" android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/disponiblep" android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/valortp"
        android:hint="*VALOR TOTAL" android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/valorup" android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/valorup"
        android:hint="*VALOR UNITARIO" android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/vendidop" android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/disponiblep"
        android:hint="*DISPONIBLES" android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/nombrep" android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"/>
    <Button
        android:text="INGRESAR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bingresarp2" android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/valortp"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="80dp"/>
    <Button
        android:text="VENTAS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bventasp" android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/valortp"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
        app:layout_constraintStart_toEndOf="@+id/bingresarp2" android:layout_marginStart="8dp"
        app:layout_constraintHorizontal_bias="0.116"/>
</androidx.constraintlayout.widget.ConstraintLayout>

